@page
@model RentalHouseWebApp.Pages.Owners.AddModel
@{
}


<form method="post">
    <h3>Add </h3>
<h3>Add New</h3>
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
    </div>

     <div class="form-group">
        <label asp-for="@Model.MobileNumber"></label>
        <input asp-for="@Model.MobileNumber" class="form-control" />
  
     <div class="form-group">
 
    <label class="form-label" asp-for="@Model.SelectedExpectedStatus"> </label>
    <select  asp-for="@Model.SelectedExpectedStatus" class="form-control" asp-items="@Model.ExpectedStatus"> </select>

    </div>
    <div class="form-group col">
            <label asp-for="@Model.Rules"></label>
            <Input asp-for="@Model.Rules" class="form-select"></Input>
        </div>
        <div class="form-group col">
            <label asp-for="@Model.Password"></label>
            <Input asp-for="@Model.Password" class="form-select"></Input>
        </div>

     <div class="form-group">
        <h5 class="text-success">@Model.SuccessMessage</h5>
        <h5 class="text-danger">@Model.ErrorMessage</h5>
       <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success ">SAVE</button>
        <a href="/Owners/List" class="btn btn-light" role="button">CANCEL</a>
    </div>

</form>
