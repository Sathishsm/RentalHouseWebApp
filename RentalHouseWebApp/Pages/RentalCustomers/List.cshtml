@page
@model RentalHouseWebApp.Pages.RentalCustomers.ListModel
@{
}

<form method="post" class="shadow">
    @if (User.IsInRole("admin"))
    {
        <div class="row">
            <div class="col-sm-10"><h3>RentalCustomers</h3></div>
        <div class="col-sm-3">
            <a href="/RentalCustomers/Add" class="btn btn-primary" role="button">
                <i class="fa fa-add"></i>
                Add
            </a>
        </div>
    </div>
    }

     <div class="row">
        <div class="col-md-7 mx-auto">
            <div class="input-group">
                <input class="form-control border rounded-pill"
                       type="search" placeholder="Type Search Text" id="example-search-input"
                       asp-for="@Model.SearchText">
                <span class="input-group-append">
                    <button class="btn btn-outline-primary bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Search">
                        <i class="fa fa-search"></i>
                    </button>
                    <button class="btn btn-outline-dark bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Clear">
                        <i class="fa fa-remove"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
         <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
 

<table class="table">
    <thead>

        <th>Id</th>
        <th>Name</th>
        <th>Gender</th>
        <th>DOB</th>
        <th>MobileNumber</th>
            <th>Password</th>
        <th>PermanentAddress</th>
        <th>PreferedLocation</th>
        <th>Status</th>
        <th>Actions</th>
    </thead>
    <tbody>
        @foreach(var d in @Model.RentalCustomers)
        {
            <tr>
                <td>@d.Id</td>
                <td>@d.Name</td>
                <td>@d.Gender</td>
                <td>@d.DOB</td>
                <td>@d.MobileNumber</td
                     <td>@d.Password</td>
                <td>@d.PermanentAddress</td>
                <td>@d.PreferedLocation</td>
                <td>@d.Status</td>
                <td>
                    <a href="/RentalCustomers/Edit/@d.Id" class="btn btn-warning" role="button">
                        <i class="fa fa-edit"></i></a>
                </td>
                    @if (User.IsInRole("admin"))
                    {
                        <td>
                            <a href="/RentalCustomers/Delete/@d.Id" class="btn btn-danger" role="button">
                        <i class="fa fa-trash-can"></i></a>
                </td>}
            </tr>
        }
    </tbody>
</table>

</form>
