@page
@model RentalHouseWebApp.Pages.RentalCustomers.AddModel
@{
}

<form method="post">
    <h3>Add </h3>
<h3>Add New</h3>
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
    </div>

     
     <div class="form-group">
       <label >Select the gender</label>
       <div class="form-check">
       @foreach(var g in @Model.Genders)
        {
            @g
            <input type="radio"  asp-for="@Model.Gender" value="@g"/>
           
        <br />
        }
        </div>
    </div>

      <div class="form-group">
        <label asp-for="@Model.DOB"></label>
        <input asp-for="@Model.DOB" class="form-control" />
    </div>

   
     <div class="form-group">
        <label asp-for="@Model.MobileNumber"></label>
        <input asp-for="@Model.MobileNumber" class="form-control" />
    </div>
         <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input asp-for="@Model.Password" class="form-control" />
    </div>
      <div class="form-group">
        <label asp-for="@Model.PermanentAddress"></label>
        <input asp-for="@Model.PermanentAddress" class="form-control" />
    </div>
     <div class="form-group">
 
    <label class="form-label" asp-for="@Model.PreferedLocation"> </label>
    <select  asp-for="@Model.PreferedLocation" class="form-control" asp-items="@Model.Locations"> </select>

    </div>
    <div class="form-group col">
            <label asp-for="@Model.SelectedStatus"></label>
            <select asp-for="@Model.SelectedStatus" asp-items="@Model.Status" class="form-select"></select>
        </div>

     <div class="form-group">
        <h5 class="text-success">@Model.SuccessMessage</h5>
        <h5 class="text-danger">@Model.ErrorMessage</h5>
         <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success ">SAVE</button>
        <a href="/RentalCustomers/List" class="btn btn-light" role="button">CANCEL</a>
    </div>

</form>
