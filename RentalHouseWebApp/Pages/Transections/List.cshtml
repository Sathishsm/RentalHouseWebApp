@page
@model RentalHouseWebApp.Pages.Transections.ListModel
@{
}



<form method="post" class="shadow">
    <div class="row">
        <div class="col-sm-10"><h3>Transections</h3></div>
        
    </div>

     <div class="row">
        <div class="col-md-7 mx-auto">
            <div class="input-group">
                <input class="form-control border rounded-pill"
                       type="search" placeholder="Type Search Text" id="example-search-input"
                       asp-for="@Model.SearchText">
                <span class="input-group-append">
                    <button class="btn btn-outline-primary bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Search">
                        <i class="fa fa-search"></i>
                    </button>
                    <button class="btn btn-outline-dark bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Clear">
                        <i class="fa fa-remove"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
    </div>
 

<table class="table">
    <thead>

        
        <th>RentalCustomerId</th>
        <th>OwnerId</th>
        <th>HouseId</th>
        <th>DateofJoining</th>
         <th>DateofEnd</th>
         <th>Rent</th>
         <th>Status</th>
        <th>Actions</th>
    </thead>
    <tbody>
            @foreach (var g in @Model.Transections) 
            {
            <tr>
                
                <td>@g.RentalCustomerId</td>
                <td>@g.OwnerId</td>
                <td>@g.HouseId</td>
                <td>@g.DateofJoining</td>
                <td>@g.DateofEnd</td>
                <td>@g.Rent</td>
                <td>@g.Status</td>
                
                <td>
                     @if (g.Status == "Rented")
                            {
                               <i class="fa fa-check" aria-hidden="true"></i>

                            }
                    
                   
                </td>
            </tr>
        }
    </tbody>
</table>

</form>

